 <section class="sign-up">
        <div class="container">

            <div class="form-container">
                <div class="left">

                    <form action="/webcast" class="form" method="GET">
                        <img src="/img/main-logo.png" alt="" id="logo">
                        <h3 class="title">Register for the Webcast</h3>

                        <input class="input" type="text" placeholder="First Name" required name="fname">
                        <input class="input" type="text" placeholder="Last Name" required name="lname">
